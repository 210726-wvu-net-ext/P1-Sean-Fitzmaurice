@model IEnumerable<RestaurantReviews.Domain.Customer>

@{
    ViewData["Title"] = "Search";
    
    
}

<h1>Search Users</h1>

<form asp-controller="User" asp-action="Search">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<p>Showing @Model.Count() matching result(s) </p>
<table class="table">
    <caption>Matching Users</caption>
    <thead>
        <tr>
            <th id="ID">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th id="Name">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th id="Phone">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th id="Email">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th id="Admin">
                @Html.DisplayNameFor(model => model.Admin)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin)
            </td>
            <td>

                @Html.ActionLink("Details", "Details", item) |
                @Html.ActionLink("Delete", "deleteUser", item)

            </td>
        </tr>
}
    </tbody>
</table>
