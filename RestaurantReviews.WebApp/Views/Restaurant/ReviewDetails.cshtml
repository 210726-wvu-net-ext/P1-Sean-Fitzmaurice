@model RestaurantReviews.Domain.Review

@{
    ViewData["Title"] = "Review Details";
}


<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @ViewData["name"]
        </dd>
        <dt class="col-sm-2">
            Restaurant
        </dt>
        <dd class="col-sm-10">
            @ViewData["restaurant"]
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stars)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stars)
            <img src="https://www.freepnglogos.com/uploads/star-png/star-vector-png-transparent-image-pngpix-21.png" alt="star.jpg" width="20" height="20">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.textReview)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.textReview)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
<div>
    @if (TempData["CurrentUserId"] != null)
    {
        @if (Model.CustomerId == (int)TempData["CurrentUserId"])
        {
            @Html.ActionLink("Edit ", "EditReview", Model)<span>| </span>
        }

        @if (Model.CustomerId == (int)TempData["CurrentUserId"] || TempData["IsAdmin"] != null)
        {
            @Html.ActionLink("Delete", "DeleteReview", Model)<span>| </span>
        }
    }
    @Html.ActionLink("Back", "Reviews", new { restaurantId = Model.RestaurantId })
</div>
