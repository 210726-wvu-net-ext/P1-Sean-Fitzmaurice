@model RestaurantReviews.WebApp.Models.CreatedReview

@{
    ViewData["Title"] = "Edit Review";
}

<h1>Edit Your Previous Review</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stars" class="control-label"></label>
                <input asp-for="Stars" class="form-control" />
                <span asp-validation-for="Stars" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="textReview" class="control-label"></label>
                <input asp-for="textReview" class="form-control" />
                <span asp-validation-for="textReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

